{
    "name": "Death Immunity",
    "description": "You are damn hard to kill... And you can eat totems, for some reason.",
    "hidden": true,

    "type": "origins:multiple",

    "totems": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "hud_render": {
            "should_render": true,
            "bar_index": 6,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_totems",
                "comparison": ">",
                "compare_to": 0
            }
        }
    },
    "eat_totems": {
        "type": "origins:edible_item",
        "food_component": {
            "always_edible": true,
            "hunger": 0,
            "saturation": 0
        },
        "consume_sound": "minecraft:block.stone.break",
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "item": "minecraft:totem_of_undying"
            }
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_totems",
            "operation": "add",
            "change": 1
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_totems",
            "comparison": "<",
            "compare_to": 1
        }
    },

    "health_mod": {
        "type": "origins:resource",
        "min": -8,
        "max": 0,
        "start_value": 0
    },
    "regen_hp": {
        "type": "origins:action_over_time",
        "interval": 1200,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_health_mod",
            "operation": "add",
            "change": 1
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_health_mod",
            "comparison": "<",
            "compare_to": 0
        }
    },
    "modify_hp": {
        "type": "origins:modify_attribute",
        "attribute": "minecraft:generic.max_health",
        "modifier": {
            "operation": "add_base_late",
            "resource": "*:*_health_mod",
            "value": 0,

            "modifier": {
                "_": "Multiply by 2 (1+1 because minecraft is weird)",
                "operation": "multiply_base_additive",
                "value": 1
            }
        }
    },
    "restore_health_on_death": {
        "type": "origins:action_on_death",
        "bientity_action": {
            "type": "origins:target_action",
            "action": {
                "type": "origins:change_resource",
                "resource": "*:*_health_mod",
                "operation": "set",
                "change": 0
            }
        }
    },

    "prevent_death": {
        "type": "origins:prevent_death",

        "damage_condition": {
            "type": "origins:type",
            "damage_type": "minecraft:generic_kill",
            "inverted": true
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:resource",
                        "resource": "*:*_totems",
                        "comparison": ">",
                        "compare_to": 0
                    },
                    "if_action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_totems",
                        "operation": "add",
                        "change": -1
                    },
                    "else_action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_health_mod",
                        "operation": "add",
                        "change": -4
                    }
                },
                {
                    "type": "origins:apply_effect",
                    "effect": {
                        "effect": "minecraft:regeneration",
                        "duration": 40
                    }
                },
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:item.totem.use",
                    "volume": 0.4
                }
            ]
        },

        "condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_totems",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_health_mod",
                    "comparison": ">=",
                    "compare_to": -4
                }
            ]
        }
    }
}
