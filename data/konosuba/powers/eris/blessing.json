{
    "name": "Blessing",
    "description": "Grants various beneficial effects to the target. The effects are based on the item in your offhand, and the item is sacrificed upon use.\n\n- Strength: Blaze Powder\n- Fire Resistance: Magma Cream\n- Water Breathing: Pufferfish\n- Slow Falling: Phantom Membrane\n- Speed: Sugar\n- Jump Boost: Rabbit Foot\n- Regeneration: Glistering Melon Slice\n- Night Vision: Golden Carrot\n- Haste: Diamond\n- Absorption: No Item",
    "badges": [
        "origins:active",
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Sneak to bless yourself, look at a target to bless them."
        }
    ],

    "type": "origins:multiple",

    "cooldown": {
        "type": "origins:cooldown",
        "cooldown": 20,
        "hud_render": {
            "should_render": false,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 14,
            "condition": { "type": "origins:resource", "resource": "*:*_cooldown", "comparison": ">", "compare_to": 0 },
            "inverted": true
        }
    },

    "activate": {
        "type": "origins:active_self",
        "key": {
            "key": "key.origins.secondary_active",
            "continuous": true
        },
        "condition": { "type": "origins:resource", "resource": "*:*_cooldown", "comparison": "==", "compare_to": 0 },
        "cooldown": 10,

        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:sneaking"
            },

            "if_action": {
                "_": "Target self",

                "type": "origins:selector_action",
                "selector": "@s",
                "bientity_action": {
                    "type": "origins:add_to_set",
                    "set": "*:*_target"
                }
            },

            "else_action": {
                "_": "Target other entities",

                "type": "origins:raycast",
                "distance": 8,
                "block": false,

                "bientity_condition": {
                    "type": "origins:target_condition",
                    "condition": {
                        "type": "origins:living"
                    }
                },

                "bientity_action": {
                    "type": "origins:add_to_set",
                    "set": "*:*_target"
                }
            }
        }
    },

