{
    "name": "Blessing",
    "description": "Gives a target additional health for a short period of time.",
    "badges": [
        "origins:active",
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Sneak to bless yourself, look at a target to bless them."
        }
    ],

    "type": "origins:multiple",

    "mana": {
        "type": "origins:resource",
        "min": 0,
        "max": 280,
        "start_value": 280,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 14,
            "condition": { "type": "origins:resource", "resource": "*:*_mana", "comparison": "<", "compare_to": 280 }
        }
    },
    "regen_cooldown": {
        "type": "origins:cooldown",
        "cooldown": 2400,
        "hud_render": { "should_render": false }
    },
    "mana_regen": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": { "type": "origins:change_resource", "resource": "*:*_mana", "operation": "add", "change": 1 },
        "condition": { "type": "origins:resource", "resource": "*:*_regen_cooldown", "comparison": "==", "compare_to": 0 }
    },

    "activate": {
        "type": "origins:active_self",
        "key": {
            "key": "key.origins.secondary_active",
            "continuous": true
        },
        "condition": { "type": "origins:resource", "resource": "*:*_mana", "comparison": ">=", "compare_to": 70 },
        "cooldown": 10,

        "entity_action": {
            "type": "origins:if_else",
            "condition": { "type": "origins:sneaking" },

            "if_action": {
                "_": "Target self",
                "type": "origins:and",
                "actions": [
                    { "type": "origins:change_resource", "resource": "*:*_mana", "operation": "add", "change": -70 },
                    { "type": "origins:trigger_cooldown", "power": "*:*_regen_cooldown" },
                    { "type": "origins:execute_command", "command": "function konosuba:origins/eris/blessing" }
                ]
            },

            "else_action": {
                "_": "Target other entities",
                "type": "origins:raycast",
                "distance": 8,
                "block": false,

                "bientity_condition": {
                    "type": "origins:and",
                    "conditions": [
                        {
                            "type": "origins:target_condition",
                            "condition": { "type": "origins:living" }
                        }
                    ]
                },

                "bientity_action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:actor_action",
                            "action": {
                                "type": "origins:and",
                                "actions": [
                                    { "type": "origins:change_resource", "resource": "*:*_mana", "operation": "add", "change": -70 },
                                    { "type": "origins:trigger_cooldown", "power": "*:*_regen_cooldown" }
                                ]
                            }
                        },
                        {
                            "type": "origins:target_action",
                            "action": {
                                "type": "origins:execute_command",
                                "command": "function konosuba:origins/eris/blessing"
                            }
                        }
                    ]
                }
            }
        }
    }
}
