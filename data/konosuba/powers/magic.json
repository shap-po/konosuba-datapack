{
    "type": "origins:multiple",
    "name": "Magic expert",
    "description": "You are profound user of magic, allowing you to bend it to your will. \n Magica will regenerate slowly with time... \n ...or very fast by eating \"golden\" food.",

    "magic":
    {
        "type": "origins:resource",
        "min": 0,
        "max": 1000,
        "hud_render": {
            "should_render": true
        },
        "max_action": {
            "type": "origins:and",
            "actions":[
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:block.amethyst_block.hit",
                    "volume": 1
                },
                {
                    "type": "origins:spawn_particles",
                    "particle": {
                        "type": "minecraft:dust",
                        "params": "0.314 0.314 0.922 2"
                    },
                    "count": 16,
                    "speed": 100.0,
                    "force": false,
                    "spread": {
                        "x": 3.0,
                        "y": 0.0,
                        "z": 3.0
                    }
                }
            ]
            
        }
    },

    "magic_regeneration_passive":{
        "type": "apoli:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_magic",
            "operation": "add",
            "change": 5
        }
    },

    "magic_regeneration_active_carrot":{
        "type": "origins:action_on_item_use",
        "trigger": "finish",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_magic",
            "operation": "add",
            "change": 100
        },
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "item": "minecraft:golden_carrot"
            }
        }
    },

    "magic_regeneration_active_apple":{
        "type": "origins:action_on_item_use",
        "trigger": "finish",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_magic",
            "operation": "add",
            "change": 300
        },
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "item": "minecraft:golden_apple"
            }
        }
    },

    "magic_regeneration_active_apple_plus":{
        "type": "origins:action_on_item_use",
        "trigger": "finish",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_magic",
            "operation": "set",
            "change": 999
        },
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "item": "minecraft:enchanted_golden_apple"
            }
        }
    }
}