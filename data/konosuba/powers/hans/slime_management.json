{
    "name": "Slime management",
    "description": "Allows you to absorb or extract slime from your body. The more slime you have - the bigger, slower and stronger you are.",

    "type": "origins:active_self",
    "key": {
        "key": "key.origins.secondary_active",
        "continuous": true
    },
    "cooldown": 2,
    "entity_action": {
        "type": "origins:if_else_list",
        "actions": [
            {
                "action": {
                    "type": "origins:if_else",
                    "condition": { "type": "origins:resource", "resource": "*:hans/slime_count", "comparison": "<", "compare_to": 9950 },
                    "if_action": {
                        "type": "origins:modify_inventory",
                        "slot": "weapon.mainhand",
                        "item_action": { "type": "origins:consume" },
                        "entity_action": {
                            "type": "origins:change_resource",
                            "resource": "*:hans/slime_count",
                            "change": 50
                        }
                    }
                },
                "condition": {
                    "type": "origins:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": { "type": "origins:ingredient", "ingredient": { "item": "minecraft:slime_ball" } }
                }
            },
            {
                "action": {
                    "type": "origins:if_else",
                    "condition": { "type": "origins:resource", "resource": "*:hans/slime_count", "comparison": "<", "compare_to": 9600 },
                    "if_action": {
                        "type": "origins:modify_inventory",
                        "slot": "weapon.mainhand",
                        "item_action": { "type": "origins:consume" },
                        "entity_action": {
                            "type": "origins:change_resource",
                            "resource": "*:hans/slime_count",
                            "change": 400
                        }
                    }
                },
                "condition": {
                    "type": "origins:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": { "type": "origins:ingredient", "ingredient": { "item": "minecraft:slime_block" } }
                }
            },
            {
                "action": {
                    "type": "origins:if_else",
                    "condition": { "type": "origins:resource", "resource": "*:hans/slime_count", "comparison": ">=", "compare_to": 50 },
                    "if_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:change_resource",
                                "resource": "*:hans/slime_count",
                                "change": -50
                            },
                            {
                                "type": "origins:give",
                                "stack": { "item": "minecraft:slime_ball", "amount": 1 }
                            }
                        ]
                    }
                },
                "condition": { "type": "origins:constant", "value": true }
            }
        ]
    },

    "condition": {
        "type": "origins:resource",
        "resource": "*:hans/nimble_escape_cooldown",
        "compare_to": 0,
        "comparison": "<="
    }
}
