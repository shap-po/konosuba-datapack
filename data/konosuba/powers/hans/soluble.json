{
    "type": "origins:multiple",

    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": {
                "translate": "badge.konosuba.hans.soluble.0"
            }
        }
    ],

    "water": {
        "type": "origins:action_over_time",
        "interval": 10,

        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:fluid_height",
                    "fluid": "minecraft:water",
                    "comparison": ">",
                    "compare_to": 0.0
                },
                {
                    "type": "origins:or",
                    "inverted": true,
                    "conditions": [
                        {
                            "type": "origins:status_effect",
                            "effect": "minecraft:conduit_power"
                        },
                        {
                            "type": "origins:status_effect",
                            "effect": "minecraft:water_breathing"
                        }
                    ]
                }
            ]
        },
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:hans/slime_count",
                "comparison": ">=",
                "compare_to": 100
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:hans/slime_count",
                "change": -100
            },
            "else_action": {
                "type": "origins:execute_command",
                "command": "damage @s 1 origins:hurt_by_water"
            }
        }
    },

    "rain": {
        "type": "origins:action_over_time",
        "interval": 10,

        "condition": {
            "type": "origins:and",
            "conditions": [
                { "type": "origins:in_rain" },
                {
                    "type": "origins:or",
                    "inverted": true,
                    "conditions": [
                        {
                            "type": "origins:status_effect",
                            "effect": "minecraft:conduit_power"
                        },
                        {
                            "type": "origins:status_effect",
                            "effect": "minecraft:water_breathing"
                        }
                    ]
                }
            ]
        },

        "entity_action": {
            "type": "origins:if_else_list",
            "actions": [
                {
                    "condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:resource",
                                "resource": "*:hans/slime_count",
                                "comparison": ">=",
                                "compare_to": 50
                            },
                            {
                                "type": "origins:inventory",
                                "slot": "armor.head",
                                "comparison": "==",
                                "compare_to": 0
                            }
                        ]
                    },
                    "action": {
                        "type": "origins:change_resource",
                        "resource": "*:hans/slime_count",
                        "change": -50
                    }
                },
                {
                    "condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:resource",
                                "resource": "*:hans/slime_count",
                                "comparison": "<=",
                                "compare_to": 50
                            },
                            {
                                "type": "origins:inventory",
                                "slot": "armor.head",
                                "comparison": "==",
                                "compare_to": 0
                            }
                        ]
                    },
                    "action": {
                        "type": "origins:execute_command",
                        "command": "damage @s 0.5 origins:hurt_by_water"
                    }
                },
                {
                    "condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:resource",
                                "resource": "*:hans/slime_count",
                                "comparison": ">=",
                                "compare_to": 10
                            },
                            {
                                "type": "origins:inventory",
                                "slot": "armor.head",
                                "comparison": "==",
                                "compare_to": 0,
                                "inverted": true
                            }
                        ]
                    },
                    "action": {
                        "type": "origins:change_resource",
                        "resource": "*:hans/slime_count",
                        "change": -10
                    }
                },
                {
                    "condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:resource",
                                "resource": "*:hans/slime_count",
                                "comparison": "<=",
                                "compare_to": 10
                            },
                            {
                                "type": "origins:inventory",
                                "slot": "armor.head",
                                "comparison": "==",
                                "compare_to": 0,
                                "inverted": true
                            }
                        ]
                    },
                    "action": {
                        "type": "origins:execute_command",
                        "command": "damage @s 0.25 origins:hurt_by_water"
                    }
                }
            ]
        }
    }
}
