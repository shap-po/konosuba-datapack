{
    "badges": [
        "origins:toggle"
    ],

    "type": "origins:multiple",

    "cooldown": {
        "type": "origins:cooldown",
        "cooldown": 6000,
        "hud_render": {
            "bar_index": 9,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_03.png"
        }
    },

    "toggled": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,

        "hud_render": {
            "bar_index": 17,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_toggled",
                "comparison": "==",
                "compare_to": 1
            },
            "should_render": true
        }
    },

    "toggle": {
        "type": "origins:active_self",
        "key": "key.origins.primary_active",

        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cooldown",
            "comparison": "==",
            "compare_to": 0
        },

        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_toggled",
                "comparison": "==",
                "compare_to": 1
            },

            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:*_toggled",
                "operation": "set",
                "change": 0
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "*:*_toggled",
                "operation": "set",
                "change": 1
            }
        }
    },

    "morph_on_kill": {
        "type": "origins:action_on_hit",

        "condition": {
            "type": "origins:resource",
            "resource": "*:*_toggled",
            "comparison": "==",
            "compare_to": 1
        },

        "bientity_condition": {
            "type": "origins:target_condition",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:living"
                    },
                    {
                        "type": "origins:in_tag",
                        "tag": "konosuba:vanir_denylist",
                        "inverted": true
                    },
                    {
                        "type": "origins:health",
                        "comparison": "<=",
                        "compare_to": 0
                    }
                ]
            }
        },
        "bientity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "shappoli:morph"
                },
                {
                    "type": "origins:actor_action",
                    "action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:change_resource",
                                "resource": "*:*_toggled",
                                "operation": "set",
                                "change": 0
                            },
                            {
                                "type": "origins:trigger_cooldown",
                                "power": "*:*_cooldown"
                            }
                        ]
                    }
                }
            ]
        }
    }
}
