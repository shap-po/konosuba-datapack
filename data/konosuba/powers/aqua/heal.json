{
    "name": "Divine rejuvenation",
    "description": "With your godly power, just by taking a look at others you can make them feel better.",

    "badges": [
        "origins:active",
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Sneak to heal yourself, look at a others to heal them."
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Will hurt others if you are a demon."
        }
    ],
    "type": "origins:multiple",

    "mana": {
        "type": "origins:resource",
        "min": 0,
        "max": 280,
        "start_value": 280,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 4,
            "condition": {
                "type": "origins:and",
                "conditions": [
                    { "type": "origins:power", "power": "konosuba:demon", "inverted": true },
                    { "type": "origins:resource", "resource": "*:*_mana", "comparison": "<", "compare_to": 280 }
                ]
            }
        }
    },
    "mana_dark": {
        "_": "Copy of mana resource, but with a different texture",
        "type": "origins:resource",
        "min": 0,
        "max": 280,
        "start_value": 280,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 14,
            "condition": {
                "type": "origins:and",
                "conditions": [
                    { "type": "origins:power", "power": "konosuba:demon" },
                    { "type": "origins:resource", "resource": "*:*_mana", "comparison": "<", "compare_to": 280 }
                ]
            }
        }
    },
    "regen_cooldown": {
        "type": "origins:cooldown",
        "cooldown": 200,
        "hud_render": { "should_render": false }
    },
    "mana_regen": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                { "type": "origins:change_resource", "resource": "*:*_mana", "operation": "add", "change": 1 },
                {
                    "type": "origins:modify_resource",
                    "resource": "*:*_mana_dark",
                    "modifier": { "operation": "set_total", "resource": "*:*_mana", "value": 0 }
                }
            ]
        },
        "condition": { "type": "origins:resource", "resource": "*:*_regen_cooldown", "comparison": "==", "compare_to": 0 }
    },

    "activate": {
        "type": "origins:active_self",
        "key": {
            "key": "key.origins.secondary_active",
            "continuous": true
        },
        "condition": { "type": "origins:resource", "resource": "*:*_mana", "comparison": ">=", "compare_to": 40 },
        "cooldown": 20,

        "entity_action": {
            "type": "origins:if_else",
            "condition": { "type": "origins:sneaking" },

            "if_action": {
                "_": "Target self",
                "type": "origins:if_else_list",
                "actions": [
                    {
                        "condition": { "type": "origins:power", "power": "konosuba:demon" },
                        "action": {
                            "type": "origins:and",
                            "actions": [
                                { "type": "origins:damage", "amount": 2, "damage_type": "minecraft:magic" },
                                {
                                    "type": "origins:execute_command",
                                    "command": "function konosuba:origins/aqua/heal/damage"
                                },
                                { "type": "origins:change_resource", "resource": "*:*_mana", "operation": "add", "change": -40 },
                                {
                                    "type": "origins:modify_resource",
                                    "resource": "*:*_mana_dark",
                                    "modifier": { "operation": "set_total", "resource": "*:*_mana", "value": 0 }
                                },
                                { "type": "origins:trigger_cooldown", "power": "*:*_regen_cooldown" }
                            ]
                        }
                    },
                    {
                        "condition": {
                            "type": "origins:or",
                            "conditions": [
                                { "type": "origins:relative_health", "comparison": "<", "compare_to": 1 },
                                { "type": "origins:power", "power": "konosuba:beldia/cursed_status" }
                            ]
                        },
                        "action": {
                            "type": "origins:and",
                            "actions": [
                                { "type": "origins:heal", "amount": 4 },
                                { "type": "origins:execute_command", "command": "function konosuba:origins/aqua/heal/heal" },
                                { "type": "origins:change_resource", "resource": "*:*_mana", "operation": "add", "change": -40 },
                                {
                                    "type": "origins:modify_resource",
                                    "resource": "*:*_mana_dark",
                                    "modifier": { "operation": "set_total", "resource": "*:*_mana", "value": 0 }
                                },
                                { "type": "origins:trigger_cooldown", "power": "*:*_regen_cooldown" }
                            ]
                        }
                    }
                ]
            },

            "else_action": {
                "_": "Target other entities",
                "type": "origins:raycast",
                "distance": 8,
                "block": false,

                "bientity_condition": {
                    "_": "Only allow living targets; target must not have full health or be cursed by Beldia OR Aqua must be a demon",
                    "type": "origins:and",
                    "conditions": [
                        {
                            "type": "origins:target_condition",
                            "condition": { "type": "origins:living" }
                        },
                        {
                            "type": "origins:or",
                            "conditions": [
                                {
                                    "type": "origins:actor_condition",
                                    "condition": { "type": "origins:power", "power": "konosuba:demon" }
                                },
                                {
                                    "type": "origins:target_condition",
                                    "condition": {
                                        "type": "origins:or",
                                        "conditions": [
                                            { "type": "origins:relative_health", "comparison": "<", "compare_to": 1 },
                                            { "type": "origins:power", "power": "konosuba:beldia/cursed_status" }
                                        ]
                                    }
                                }
                            ]
                        }
                    ]
                },

                "bientity_action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "_": "Remove mana, update dark mana, and trigger cooldown",
                            "type": "origins:actor_action",
                            "action": {
                                "type": "origins:and",
                                "actions": [
                                    { "type": "origins:change_resource", "resource": "*:*_mana", "operation": "add", "change": -40 },
                                    {
                                        "type": "origins:modify_resource",
                                        "resource": "*:*_mana_dark",
                                        "modifier": { "operation": "set_total", "resource": "*:*_mana", "value": 0 }
                                    },
                                    { "type": "origins:trigger_cooldown", "power": "*:*_regen_cooldown" }
                                ]
                            }
                        },

                        {
                            "_": "Heal or damage the target, depending on whether Aqua is a demon",
                            "type": "origins:if_else",
                            "condition": {
                                "type": "origins:actor_condition",
                                "condition": { "type": "origins:power", "power": "konosuba:demon" }
                            },
                            "if_action": {
                                "type": "origins:and",
                                "actions": [
                                    { "type": "origins:damage", "amount": 2, "damage_type": "minecraft:magic" },
                                    {
                                        "type": "origins:target_action",
                                        "action": {
                                            "type": "origins:execute_command",
                                            "command": "function konosuba:origins/aqua/heal/damage"
                                        }
                                    }
                                ]
                            },
                            "else_action": {
                                "type": "origins:target_action",
                                "action": {
                                    "type": "origins:and",
                                    "actions": [
                                        { "type": "origins:heal", "amount": 4 },
                                        { "type": "origins:execute_command", "command": "function konosuba:origins/aqua/heal/heal" }
                                    ]
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}
