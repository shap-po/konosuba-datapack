{
    "hidden": true,
    "type": "origins:multiple",

    "timer": {
        "type": "origins:resource",
        "min": 0,
        "max": 30,
        "start_value": 30,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 1
        },
        "min_action": {
            "type": "origins:and",
            "actions": [
                { "type": "origins:damage", "amount": 10000, "damage_type": "konosuba:cursed" },
                { "type": "origins:execute_command", "command": "function konosuba:beldia/curse/notify_death" },
                { "type": "origins:execute_command", "command": "power remove @s konosuba:beldia/cursed" }
            ]
        }
    },
    "tick_timer": {
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": { "type": "origins:change_resource", "resource": "*:*_timer", "change": -1 }
    },

    "heal_self": {
        "type": "origins:action_on_item_use",
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "tag": "konosuba:lifts_curse"
            }
        },
        "entity_action": {
            "type": "origins:execute_command",
            "command": "power remove @s konosuba:beldia/cursed"
        }
    },
    "heal_by_other": {
        "type": "origins:action_on_being_used",
        "held_item_action": { "type": "origins:consume" },
        "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
                "tag": "konosuba:lifts_curse"
            }
        },
        "bientity_action": {
            "type": "origins:target_action",
            "action": {
                "type": "origins:execute_command",
                "command": "power remove @s konosuba:beldia/cursed"
            }
        }
    },

    "remove_on_death": {
        "type": "origins:action_on_death",
        "bientity_action": {
            "type": "origins:actor_action",
            "action": {
                "type": "origins:execute_command",
                "command": "power remove @s konosuba:beldia/cursed"
            }
        }
    }
}
