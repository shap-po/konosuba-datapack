{
    "name": "Change spell",
    "description": "As you are not Megumin, with just a single thought you can switch spells.",
    "badges": [
        "origins:active",
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Sneak to switch back"
        }
    ],

    "type": "origins:multiple",

    "spell": {
        "type": "origins:resource",
        "min": 0,
        "max": 5,
        "hud_render": { "should_render": false }
    },

    "change_spell": {
        "type": "origins:active_self",
        "key": "key.origins.secondary_active",
        "cooldown": 4,
        "hud_render": {
            "should_render": false
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:if_else",
                    "condition": { "type": "origins:sneaking" },
                    "if_action": {
                        "type": "origins:if_else",
                        "condition": { "type": "origins:resource", "resource": "*:*_spell", "comparison": "==", "compare_to": 0 },
                        "if_action": { "type": "origins:change_resource", "resource": "*:*_spell", "operation": "set", "change": 5 },
                        "else_action": { "type": "origins:change_resource", "resource": "*:*_spell", "operation": "add", "change": -1 }
                    },
                    "else_action": {
                        "type": "origins:if_else",
                        "condition": { "type": "origins:resource", "resource": "*:*_spell", "comparison": "==", "compare_to": 5 },
                        "if_action": { "type": "origins:change_resource", "resource": "*:*_spell", "operation": "set", "change": 0 },
                        "else_action": { "type": "origins:change_resource", "resource": "*:*_spell", "operation": "add", "change": 1 }
                    }
                },
                {
                    "type": "origins:if_else_list",
                    "actions": [
                        {
                            "condition": { "type": "origins:resource", "resource": "*:*_spell", "comparison": "==", "compare_to": 0 },
                            "action": {
                                "type": "origins:execute_command",
                                "command": "title @s actionbar {\"text\":\"Current spell: Paralysis\",\"color\":\"blue\"}"
                            }
                        },
                        {
                            "condition": { "type": "origins:resource", "resource": "*:*_spell", "comparison": "==", "compare_to": 1 },
                            "action": {
                                "type": "origins:execute_command",
                                "command": "title @s actionbar {\"text\":\"Current spell: Random teleport\",\"color\":\"blue\"}"
                            }
                        },
                        {
                            "condition": { "type": "origins:resource", "resource": "*:*_spell", "comparison": "==", "compare_to": 2 },
                            "action": {
                                "type": "origins:execute_command",
                                "command": "title @s actionbar {\"text\":\"Current spell: Draining touch\",\"color\":\"blue\"}"
                            }
                        },
                        {
                            "condition": { "type": "origins:resource", "resource": "*:*_spell", "comparison": "==", "compare_to": 3 },
                            "action": {
                                "type": "origins:execute_command",
                                "command": "title @s actionbar {\"text\":\"Current spell: Skaters\",\"color\":\"blue\"}"
                            }
                        },
                        {
                            "condition": { "type": "origins:resource", "resource": "*:*_spell", "comparison": "==", "compare_to": 4 },
                            "action": {
                                "type": "origins:execute_command",
                                "command": "title @s actionbar {\"text\":\"Current spell: Night vision\",\"color\":\"blue\"}"
                            }
                        },
                        {
                            "condition": { "type": "origins:resource", "resource": "*:*_spell", "comparison": "==", "compare_to": 5 },
                            "action": {
                                "type": "origins:execute_command",
                                "command": "title @s actionbar {\"text\":\"Current spell: EMPTY\",\"color\":\"red\"}"
                            }
                        }
                    ]
                }
            ]
        }
    }
}
