{
    "name": "Random teleportation",
    "description": "Abduct creature to semi-random location.",

    "type": "origins:active_self",

    "badges": [
        "origins:active",
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Use shift to a target yourself and others otherwise."
        }
    ],

    "cooldown": 100,
    "hud_render": {
        "should_render": false
    },
    "key": "key.origins.primary_active",

    "entity_action": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:if_else",
                "condition": { "type": "origins:sneaking", "inverted": true },
                "if_action": {
                    "type": "origins:raycast",
                    "distance": 4,
                    "block": false,
                    "bientity_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:target_action",
                                "action": {
                                    "type": "origins:execute_command",
                                    "command": "function konosuba:origins/wiz/rtp"
                                }
                            },
                            {
                                "type": "origins:actor_action",
                                "action": {
                                    "type": "origins:change_resource",
                                    "resource": "*:magic_magic",
                                    "operation": "add",
                                    "change": -700
                                }
                            }
                        ]
                    },
                    "bientity_condition": {
                        "type": "origins:and",
                        "conditions": [
                            { "type": "origins:can_see" },
                            {
                                "type": "origins:target_condition",
                                "condition": {
                                    "type": "origins:and",
                                    "conditions": [{ "type": "origins:living" }]
                                }
                            }
                        ]
                    }
                },
                "else_action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:execute_command",
                            "command": "function konosuba:origins/wiz/rtp"
                        },
                        {
                            "type": "origins:change_resource",
                            "resource": "*:magic_magic",
                            "operation": "add",
                            "change": -500
                        }
                    ]
                }
            }
        ]
    },

    "condition": {
        "type": "origins:and",
        "conditions": [
            {
                "type": "origins:resource",
                "resource": "*:magic_magic",
                "comparison": ">",
                "compare_to": 700
            },
            {
                "type": "origins:resource",
                "resource": "*:wiz/spellchanger_spell",
                "comparison": "==",
                "compare_to": 1
            },
            {
                "type": "origins:dimension",
                "dimension": "minecraft:overworld"
            }
        ]
    }
}
