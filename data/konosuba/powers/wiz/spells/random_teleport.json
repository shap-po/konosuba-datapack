{
    "badges": [
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/active.png",
            "text": {
                "translate": "origins.gui.badge.active",
                "with": [
                    {
                        "text": "",
                        "extra": [
                            {
                                "text": "["
                            },
                            {
                                "keybind": "key.origins.primary_active"
                            },
                            {
                                "text": "]"
                            }
                        ]
                    }
                ]
            }
        },
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": {
                "translate": "badge.konosuba.wiz.spells.random_teleport.0"
            }
        }
    ],

    "type": "origins:multiple",

    "charge": {
        "type": "origins:resource",
        "min": 0,
        "max": 700,

        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 8,
            "icon_index": 1,

            "condition": {
                "type": "origins:resource",
                "resource": "*:*_charge",
                "comparison": ">",
                "compare_to": 0
            }
        }
    },

    "target": {
        "type": "origins:entity_set",
        "action_on_add": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:actor_action",
                    "action": {
                        "type": "origins:execute_command",
                        "command": "function konosuba:origins/wiz/rtp/prepare"
                    }
                },
                {
                    "type": "origins:target_action",
                    "action": {
                        "type": "origins:execute_command",
                        "command": "function konosuba:origins/wiz/rtp/teleport"
                    }
                },
                {
                    "type": "origins:actor_action",
                    "action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_charge",
                        "operation": "set",
                        "change": 0
                    }
                },
                {
                    "type": "origins:remove_from_set",
                    "set": "*:*_target"
                }
            ]
        }
    },

    "is_charging": {
        "_": "Determines if the player is charging the ability. (0 - not charging, 1..3 - charging)",
        "type": "origins:resource",
        "min": 0,
        "max": 3,
        "hud_render": {
            "should_render": false
        },

        "min_action": {
            "_": "Trigger the ability when the player stopped charging.",
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_charge",
                "comparison": ">=",
                "compare_to": 100
            },

            "if_action": {
                "type": "origins:if_else",
                "condition": {
                    "type": "origins:sneaking",
                    "inverted": true
                },

                "if_action": {
                    "type": "origins:raycast",
                    "distance": 4,
                    "block": false,
                    "bientity_action": {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:actor_condition",
                            "condition": {
                                "_": "Make sure there is enough magic to teleport other entities.",
                                "type": "origins:resource",
                                "resource": "*:wiz/magic_magic",
                                "comparison": ">=",
                                "compare_to": 700
                            }
                        },
                        "if_action": {
                            "type": "origins:and",
                            "actions": [
                                {
                                    "type": "origins:add_to_set",
                                    "set": "*:*_target"
                                },
                                {
                                    "type": "origins:actor_action",
                                    "action": {
                                        "type": "origins:change_resource",
                                        "resource": "*:wiz/magic_magic",
                                        "operation": "add",
                                        "change": -700
                                    }
                                }
                            ]
                        },
                        "else_action": {
                            "type": "origins:actor_action",
                            "action": {
                                "type": "origins:execute_command",
                                "command": "function konosuba:origins/wiz/rtp/not_enough_mana"
                            }
                        }
                    },
                    "bientity_condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:can_see"
                            },
                            {
                                "type": "origins:target_condition",
                                "condition": {
                                    "type": "origins:and",
                                    "conditions": [
                                        {
                                            "type": "origins:living"
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                },

                "else_action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:selector_action",
                            "selector": "@s",
                            "bientity_action": {
                                "type": "origins:add_to_set",
                                "set": "*:*_target"
                            }
                        },
                        {
                            "type": "origins:change_resource",
                            "resource": "*:wiz/magic_magic",
                            "operation": "add",
                            "change": -500
                        }
                    ]
                }
            }
        }
    },

    "ability": {
        "_": "Increase the charge and is_charging resources if conditions are met.",
        "type": "origins:active_self",
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        },
        "hud_render": {
            "should_render": false
        },
        "cooldown": 1,

        "condition": {
            "type": "origins:resource",
            "resource": "*:wiz/spellchanger_spell",
            "comparison": "==",
            "compare_to": 1
        },

        "entity_action": {
            "condition": {
                "type": "origins:resource",
                "resource": "*:wiz/magic_magic",
                "comparison": ">=",
                "compare_to": 500
            },
            "type": "origins:if_else",
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_charge",
                        "operation": "add",
                        "change": 3
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_is_charging",
                        "operation": "add",
                        "change": 3
                    },
                    {
                        "type": "origins:apply_effect",
                        "effect": {
                            "effect": "minecraft:slowness",
                            "duration": 20,
                            "amplifier": 3,
                            "show_icon": false,
                            "show_particles": false
                        }
                    },
                    {
                        "type": "origins:spawn_particles",
                        "particle": "minecraft:reverse_portal",
                        "count": 3,
                        "spread": {
                            "x": 0.4,
                            "y": 0.3,
                            "z": 0.4
                        },
                        "speed": 0.1
                    }
                ]
            },
            "else_action": {
                "type": "origins:execute_command",
                "command": "function konosuba:origins/wiz/not_enough_mana"
            }
        }
    },

    "modify_jump": {
        "type": "origins:modify_jump",
        "modifier": {
            "operation": "set_total",
            "value": 0.2
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_is_charging",
            "comparison": ">",
            "compare_to": 0
        }
    },

    "decay_charge": {
        "_": "Decay the charge over time if not charging.",
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_is_charging",
            "comparison": "==",
            "compare_to": 0
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_charge",
            "change": -20
        }
    },
    "decay_is_charging": {
        "_": "Decay the is_charging resource",
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_is_charging",
            "change": -1
        }
    }
}
