{
    "name": "Skaters",
    "description": "Create cryo-stream under your feet.",

    "type": "origins:multiple",

    "badges": [
        "origins:toggle",
        {
            "type": "origins:tooltip",
            "sprite": "origins:textures/gui/badge/info.png",
            "text": "Freezes water under you."
        }
    ],

    "toggle": {
        "type": "origins:toggle",
        "active_by_default": false,
        "retain_state": false,
        "key": {
            "key": "key.origins.primary_active"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:wiz/spellchanger_spell",
            "comparison": "==",
            "compare_to": 3
        }
    },

    "bar_visible": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 1,
        "hud_render": {
            "should_render": true,
            "bar_index": 0,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "condition": {
                "type": "origins:power_active",
                "power": "*:*_toggle"
            }
        }
    },


    "frostwalker": {
        "type": "origins:action_over_time",
        "name": "Ice skaters",
        "description": "-",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "fill ~-3 ~-0.2 ~-3 ~3 ~-0.2 ~3 minecraft:frosted_ice replace minecraft:water"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:magic_magic",
                    "operation": "add",
                    "change": -3
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "*:*_toggle"
                },
                {
                    "type": "origins:resource",
                    "resource": "*:wiz/spellchanger_spell",
                    "comparison": "==",
                    "compare_to": 3
                },
                {
                    "type": "origins:resource",
                    "resource": "*:magic_magic",
                    "comparison": ">",
                    "compare_to": 10
                },
                {
                    "type": "origins:fluid_height",
                    "compare_to": 1,
                    "comparison": "<=",
                    "fluid": "minecraft:water"
                },
                {
                    "type": "origins:submerged_in",
                    "inverted": true,
                    "fluid": "minecraft:water"
                }
            ]
        },
        "interval": 5
    },

    "faster_on_ice": {
        "type": "origins:conditioned_attribute",
        "modifier": {
            "attribute": "minecraft:generic.movement_speed",
            "operation": "addition",
            "value": 0.04
        },
        "tick_rate": 20,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "*:*_toggle"
                },
                {
                    "type": "origins:on_block",
                    "block_condition": {
                        "type": "origins:or",
                        "conditions": [
                            { "type": "origins:in_tag", "tag": "minecraft:ice" },
                            { "type": "origins:in_tag", "tag": "minecraft:snow" }
                        ]
                    }
                }
            ]
        }
    },

    "faster_everywhere": {
        "type": "origins:conditioned_attribute",
        "modifier": {
            "attribute": "minecraft:generic.movement_speed",
            "operation": "addition",
            "value": 0.03
        },
        "tick_rate": 20,
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        }
    }
}
