{
    "name": "Explosion magic",
    "description": "Invoke great magic within and destroy everything in your path!",

    "type": "origins:multiple",

    "cooldown": {
        "type": "origins:cooldown",
        "cooldown": 200,
        "hud_render": {
            "should_render": true,
            "bar_index": 13,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png"
        }
    },

    "charge": {
        "type": "origins:resource",
        "min": 0,
        "max": 40,
        "hud_render": {
            "should_render": true,
            "bar_index": 7,
            "condition": { "type": "origins:resource", "resource": "*:*_charge", "comparison": ">", "compare_to": 0 }
        }
    },
    "is_charging": {
        "_": "Determines if the player is charging the ability. (0 - not charging, 1,2 - charging)",
        "type": "origins:resource",
        "min": 0,
        "max": 2,
        "hud_render": { "should_render": false }
    },

    "ability": {
        "_": "Increase the explosion charge and is_charging resources if not on cooldown.",
        "type": "origins:active_self",
        "cooldown": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": { "type": "origins:resource", "resource": "*:*_cooldown", "comparison": "==", "compare_to": 0 },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    { "type": "origins:change_resource", "resource": "*:*_charge", "change": 1 },
                    { "type": "origins:change_resource", "resource": "*:*_is_charging", "change": 2 }
                ]
            }
        },
        "hud_render": { "should_render": false },
        "key": { "key": "key.origins.primary_active", "continuous": true }
    },

    "decay_charge": {
        "_": "Decay the explosion charge over time if not fully charged",
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": { "type": "origins:change_resource", "resource": "*:*_charge", "change": -2 },
        "condition": {
            "type": "origins:and",
            "conditions": [
                { "type": "origins:resource", "resource": "*:*_charge", "comparison": "<", "compare_to": 40 },
                { "type": "origins:resource", "resource": "*:*_is_charging", "comparison": "==", "compare_to": 0 }
            ]
        }
    },
    "decay_is_charging": {
        "_": "Decay the is_charging resource",
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": { "type": "origins:change_resource", "resource": "*:*_is_charging", "change": -1 }
    },

    "animate": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": { "type": "origins:resource", "resource": "*:*_charge", "comparison": "==", "compare_to": 40 },
            "if_action": {
                "_": "TODO: Ready to boom"
            },
            "else_action": {
                "_": "TODO: Primary key held/released"
            }
        },
        "condition": { "type": "origins:resource", "resource": "*:*_charge", "comparison": ">", "compare_to": 1 }
    },

    "explode": {
        "_": "Explode if the charge is full and the player stops charging.",
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                { "type": "origins:change_resource", "resource": "*:*_charge", "change": 0, "operation": "set" },
                { "type": "origins:trigger_cooldown", "power": "*:*_cooldown" },
                { "type": "origins:execute_command", "command": "say Boom! #TODO" },
                {
                    "type": "origins:raycast",
                    "distance": 64,
                    "block": true,
                    "entity": true,
                    "shape_type": "visual",
                    "fluid_handling": "any",
                    "command_at_hit": "summon minecraft:tnt ~ ~ ~ {Fuse:0,ExplosionRadius:100b}"
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                { "type": "origins:resource", "resource": "*:*_charge", "comparison": "==", "compare_to": 40 },
                { "type": "origins:resource", "resource": "*:*_is_charging", "comparison": "==", "compare_to": 0 }
            ]
        }
    },

    "shake": {
        "type": "origins:shaking",
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_charge",
            "comparison": "==",
            "compare_to": 40
        }
    }
}
