{
    "name": "Explosion magic",
    "description": "Invoke great magic within and destroy everything in your path!",

    "type": "origins:multiple",

    "cooldown": {
        "type": "origins:cooldown",
        "cooldown": 200,
        "hud_render": {
            "should_render": true,
            "bar_index": 13,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png"
        }
    },

    "explosion_charge": {
        "type": "origins:resource",
        "min": 0,
        "max": 40,
        "hud_render": {
            "should_render": true,
            "bar_index": 7,
            "condition": { "type": "origins:resource", "resource": "*:*_explosion_charge", "comparison": ">", "compare_to": 0 }
        }
    },
    "currently_casting": {
        "_": "Determines if the player is currently casting the ability. (0 - not casting, 1,2 - casting)",
        "type": "origins:resource",
        "min": 0,
        "max": 2,
        "hud_render": { "should_render": false }
    },

    "ability": {
        "_": "Increase the explosion charge and currently casting resources if not on cooldown.",
        "type": "origins:active_self",
        "cooldown": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": { "type": "origins:resource", "resource": "*:*_cooldown", "comparison": "==", "compare_to": 0 },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    { "type": "origins:change_resource", "resource": "*:*_explosion_charge", "change": 1 },
                    { "type": "origins:change_resource", "resource": "*:*_currently_casting", "change": 2 }
                ]
            }
        },
        "hud_render": { "should_render": false },
        "key": { "key": "key.origins.primary_active", "continuous": true }
    },

    "decay_charge": {
        "_": "Decay the explosion charge over time if not fully charged",
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": { "type": "origins:change_resource", "resource": "*:*_explosion_charge", "change": -2 },
        "condition": {
            "type": "origins:and",
            "conditions": [
                { "type": "origins:resource", "resource": "*:*_explosion_charge", "comparison": "<", "compare_to": 40 },
                { "type": "origins:resource", "resource": "*:*_currently_casting", "comparison": "==", "compare_to": 0 }
            ]
        }
    },
    "decay_casting": {
        "_": "Decay the 'currently casting' resource",
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": { "type": "origins:change_resource", "resource": "*:*_currently_casting", "change": -1 }
    },

    "animate": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": { "type": "origins:resource", "resource": "*:*_explosion_charge", "comparison": "==", "compare_to": 40 },
            "if_action": {
                "type": "origins:execute_command",
                "command": "say Ready to boom! #TODO"
            },
            "else_action": {
                "type": "origins:execute_command",
                "command": "say Primary key held/released! #TODO"
            }
        },
        "condition": { "type": "origins:resource", "resource": "*:*_explosion_charge", "comparison": ">", "compare_to": 1 }
    },

    "explosion": {
        "_": "Explode if the charge is full and the player stops casting.",
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                { "type": "origins:change_resource", "resource": "*:*_explosion_charge", "change": 0, "operation": "set" },
                { "type": "origins:trigger_cooldown", "power": "*:*_cooldown" },
                { "type": "origins:execute_command", "command": "say Boom! #TODO" },
                { "type": "origins:execute_command", "command": "summon minecraft:tnt ^ ^ ^10 {Fuse:0,ExplosionRadius:10b}" }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                { "type": "origins:resource", "resource": "*:*_explosion_charge", "comparison": "==", "compare_to": 40 },
                { "type": "origins:resource", "resource": "*:*_currently_casting", "comparison": "==", "compare_to": 0 }
            ]
        }
    }
}
