{
    "type": "origins:multiple",
    "name": "Change spell",
    "description": "As you are not Megumin, with just a single thought you can switch spells. \n",

    "spell":
    {
        "type": "origins:resource",
        "min": 0,
        "max": 5,
        "hud_render": { "should_render": false }
    },

    "change_spell":
    {
        "type": "origins:active_self",
        "entity_action": 
        {
            "type": "origins:and",
            "actions": 
            [
                {
                    "type": "origins:if_else_list",
                    "actions": 
                    [
                        {
                            "condition": 
                            {
                                "type": "origins:resource",
                                "resource": "*:*_spell",
                                "comparison": "!=",
                                "compare_to": 5
                            },
                            "action": 
                            {
                                "type": "origins:change_resource",
                                "resource": "*:*_spell",
                                "operation": "add",
                                "change": 1
                            }
                        },
                        {
                            "condition": 
                            {
                                "type": "origins:resource",
                                "resource": "*:*_spell",
                                "comparison": "==",
                                "compare_to": 5
                            },
                            "action": 
                            {
                                "type": "origins:change_resource",
                                "resource": "*:*_spell",
                                "operation": "set",
                                "change": 0
                            }
                        }
                        
                    ]
                },
                {
                    "type": "origins:if_else_list",
                    "actions": 
                    [
                        {
                            "condition": 
                            {
                                "type": "origins:resource",
                                "resource": "*:*_spell",
                                "comparison": "==",
                                "compare_to": 1
                            },
                            "action": 
                            {
                                "type": "origins:execute_command",
                                "command": "/title @s actionbar {\"text\":\"Current spell: Random teleport\",\"color\":\"blue\"}"
                            }
                        },
                        {
                            "condition": 
                            {
                                "type": "origins:resource",
                                "resource": "*:*_spell",
                                "comparison": "==",
                                "compare_to": 2
                            },
                            "action": 
                            {
                                "type": "origins:execute_command",
                                "command": "/title @s actionbar {\"text\":\"Current spell: Draining touch\",\"color\":\"blue\"}"
                            }
                        },
                        {
                            "condition": 
                            {
                                "type": "origins:resource",
                                "resource": "*:*_spell",
                                "comparison": "==",
                                "compare_to": 3
                            },
                            "action": 
                            {
                                "type": "origins:execute_command",
                                "command": "/title @s actionbar {\"text\":\"Current spell: Skaters\",\"color\":\"blue\"}"
                            }
                        },
                        {
                            "condition": 
                            {
                                "type": "origins:resource",
                                "resource": "*:*_spell",
                                "comparison": "==",
                                "compare_to": 4
                            },
                            "action": 
                            {
                                "type": "origins:execute_command",
                                "command": "/title @s actionbar {\"text\":\"Current spell: NULL\",\"color\":\"blue\"}"
                            }
                        },
                        {
                            "condition": 
                            {
                                "type": "origins:resource",
                                "resource": "*:*_spell",
                                "comparison": "==",
                                "compare_to": 5
                            },
                            "action": 
                            {
                                "type": "origins:execute_command",
                                "command": "/title @s actionbar {\"text\":\"Current spell: NULL\",\"color\":\"blue\"}"
                            }
                        },
                        {
                            "condition": 
                            {
                                "type": "origins:resource",
                                "resource": "*:*_spell",
                                "comparison": "==",
                                "compare_to": 0
                            },
                            "action": 
                            {
                                "type": "origins:execute_command",
                                "command": "/title @s actionbar {\"text\":\"Current spell: Paralysis\",\"color\":\"blue\"}"
                            }
                        }
                        
                    ]
                }
            ]
        },
        "cooldown": 20,
        "hud_render": {
            "should_render": false
        },
        "key": "key.origins.secondary_active"
    }
                             
}