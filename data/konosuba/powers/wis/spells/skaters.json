{
    "type": "origins:multiple",


    "toggle":
    {
        "type": "origins:toggle",
        "active_by_default": false,
        "retain_state":false,
        "key": {
            "key": "key.origins.primary_active"
        },
        "condition": 
        {
            "type": "origins:resource",
            "resource": "*:wis/spellchanger_spell",
            "comparison": "==",
            "compare_to": 3
        }
    },

    


    "frostwalker":
    {
        "type": "origins:action_over_time",
        "name": "Ice skaters",
        "description": "-",
        "entity_action": 
        {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "/fill ~-3 ~-0.2 ~-3 ~3 ~-0.2 ~3 minecraft:frosted_ice replace minecraft:water"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:magic_magic",
                    "operation": "add",
                    "change": -3
    
                }

            ]
        },
        "condition": 
        {
            "type": "origins:and",
            "conditions":[
                {
                    "type": "origins:power_active",
                    "power": "*:*_toggle"
                },
                {
                    "type": "origins:resource",
                    "resource": "*:wis/spellchanger_spell",
                    "comparison": "==",
                    "compare_to": 3
                },
                {
                    "type": "origins:resource",
                    "resource": "*:magic_magic",
                    "comparison": ">",
                    "compare_to": 10
                },
                {
                    "type": "origins:fluid_height",
                    "compare_to": 1,
                    "comparison": "<=",
                    "fluid": "minecraft:water"
                },
                {
                    "type": "origins:submerged_in",
                    "inverted": true,
                    "fluid": "minecraft:water"
                }
            ]
        },
        "interval": 5
    },

