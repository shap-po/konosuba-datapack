{
    "type": "origins:multiple",

    "receiver": {
        "type": "shappoli:receive_action",
        "item_condition": {
            "type": "shappoli:holder",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_cooldown",
                "comparison": "==",
                "compare_to": 0
            }
        },
        "item_action": {
            "type": "apugli:cooldown",
            "ticks": 120
        },
        "action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:trigger_cooldown",
                    "power": "*:*_cooldown"
                },
                {
                    "type": "origins:play_sound",
                    "category": "players",
                    "sound": "minecraft:entity.ravager.attack",
                    "volume": 1,
                    "pitch": 1.5
                },

                {
                    "type": "origins:trigger_cooldown",
                    "power": "*:*_active_timer"
                },
                {
                    "_": "If the player is in air, apply less force to prevent them from flying too far",
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:on_block"
                    },
                    "if_action": {
                        "type": "origins:add_velocity",
                        "space": "local_horizontal_normalized",
                        "client": false,
                        "z": 1.5
                    },
                    "else_action": {
                        "type": "origins:add_velocity",
                        "space": "local_horizontal_normalized",
                        "client": false,
                        "z": 0.3
                    }
                }
            ]
        }
    },

    "cooldown": {
        "type": "origins:cooldown",
        "cooldown": 120,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_03.png",
            "bar_index": 20
        }
    },

    "active_timer": {
        "type": "origins:cooldown",
        "cooldown": 8,
        "hud_render": {
            "should_render": false
        }
    },

    "damage_on_collision": {
        "type": "shappoli:action_on_entity_collision",
        "bientity_condition": {
            "type": "origins:target_condition",
            "condition": {
                "type": "origins:living"
            }
        },
        "bientity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:damage",
                    "amount": 6,
                    "damage_type": "minecraft:mob_attack"
                },
                {
                    "type": "origins:add_velocity",
                    "client": false,
                    "z": 0.25
                }
            ]
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active_timer",
            "comparison": ">",
            "compare_to": 0
        }
    },

    "drop": {
        "type": "origins:replace_loot_table",
        "replace": {
            "minecraft:entities/ravager": "konosuba:sylvia/ravager_horns"
        }
    }
}
