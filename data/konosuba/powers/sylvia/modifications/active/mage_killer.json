{
    "type": "origins:multiple",

    "receiver": {
        "type": "shappoli:receive_action",
        "item_condition": {
            "type": "shappoli:holder",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:resource",
                        "resource": "*:*_cooldown",
                        "comparison": "==",
                        "compare_to": 0
                    },
                    {
                        "type": "origins:resource",
                        "resource": "*:*_active",
                        "comparison": "==",
                        "compare_to": 0
                    }
                ]
            }
        },
        "item_action": {
            "type": "apugli:cooldown",
            "ticks": 120
        },
        "action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_active",
                    "operation": "set",
                    "change": 200
                }
            ]
        }
    },

    "cooldown": {
        "type": "origins:cooldown",
        "cooldown": 120,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
            "bar_index": 19
        }
    },

    "active": {
        "type": "origins:resource",
        "min": 0,
        "max": 200,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 3,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_active",
                "comparison": ">",
                "compare_to": 0
            }
        },
        "min_action": {
            "_": "Trigger the cooldown as soon as the resource reaches 0",
            "type": "origins:trigger_cooldown",
            "power": "*:*_cooldown"
        }
    },
    "active_decay": {
        "type": "origins:action_over_time",
        "interval": 2,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": ">",
            "compare_to": 0
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_active",
            "operation": "add",
            "change": -1
        }
    },
    "suppress_powers": {
        "type": "origins:action_over_time",
        "interval": 20,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": ">",
            "compare_to": 0
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:spawn_particles",
                    "count": 10,
                    "particle": "minecraft:snowflake",
                    "spread": {
                        "x": 3,
                        "y": 3,
                        "z": 3
                    }
                },
                {
                    "type": "origins:area_of_effect",
                    "radius": 16,
                    "shape": "sphere",
                    "bientity_condition": {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:entity_type",
                            "entity_type": "minecraft:player"
                        }
                    },
                    "bientity_action": {
                        "_": "Block all magic powers",
                        "type": "shappoli:suppress_power",
                        "duration": 40,
                        "powers": [
                            "*:aqua/heal_activate",
                            "*:aqua/revive_activate",
                            "*:aqua/walk_on_water_walk_on_fluid",

                            "*:beldia/curse_granter_curse",
                            "*:beldia/horse_teleport",

                            "*:chris/lurk_activate",

                            "*:darkness/tank",

                            "*:eris/blessing_activate",
                            "*:eris/transfer_life_activate",

                            "*:hans/nimble_escape_prevent_death",

                            "*:kazuma/clairvoyance_toggle",
                            "*:kazuma/steal_power",

                            "*:megumin/explosion_ability",

                            "*:vanir/morph_back",
                            "*:vanir/morph_toggle",

                            "*:wiz/spells/ender_storage",
                            "*:wiz/spells/night_vision",
                            "*:wiz/spells/paralysis",
                            "*:wiz/spells/random_teleport_ability",
                            "*:wiz/spells/skaters_toggle"
                        ],
                        "bientity_action": {
                            "type": "origins:target_action",
                            "action": {
                                "type": "origins:execute_command",
                                "command": "title @s actionbar [\"\",{\"text\":\"Your magical powers are suppressed by Silvia's Mage Killer!\"}]"
                            }
                        }
                    }
                }
            ]
        }
    },

    "recipe": {
        "type": "origins:recipe",
        "recipe": {
            "id": "konosuba:mage_killer",
            "type": "minecraft:crafting_shaped",
            "pattern": [
                "  #",
                "iRi",
                "ii "
            ],
            "key": {
                "#": {
                    "item": "minecraft:end_crystal"
                },
                "i": {
                    "item": "minecraft:iron_ingot"
                },
                "R": {
                    "item": "minecraft:redstone"
                }
            },
            "result": {
                "item": "chimeraorigin:mage_killer"
            }
        }
    }
}
